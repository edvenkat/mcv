<?php 
	if(count($select_array)>0) {
		foreach($select_array as $select_key => $select_value) { ?>
		<div class="box-2 floatLeft" align='center'>
			<img src="img/ico-logo1.gif" width="100" height="100" title="<?php echo $select_value["name"]; ?>"/>
			<div class='align'><strong><?php echo $select_value["name"]; ?></strong></div>
			<div class='align'><button class="btn btn-primary" onclick='view_details(<?php echo $select_value["id"]; ?>)'>More Info</button></div>
		</div>
		<div class="box-details-<?php echo $select_value["id"]; ?> close1" style='display:none'>
			<div align='right'><a href="#" onclick='close_details(<?php echo $select_value["id"]; ?>)'>X</a></div>
			<div class="box-2-inner">
				<div class="colLeft">
					<div class="image">
						<img src="img/ico-logo1.gif" width="100" height="140" title="<?php echo $select_value["name"]; ?>"/>
					</div>
				</div>
				<div class="colRight">
					<h3><?php echo $select_value["name"]; ?></h3>
					<div class="txt-desc2b"><span><?php echo $select_value["address"]."<br>".$select_value["city"].", ".$select_value["state"]." ".$select_value["zipcode"] ?></span></div>
				</div>
				<div class="clearer">&nbsp;</div>
				<div><?php echo $select_value["desc"]; ?></div>
			</div>
		</div>
	<?php } } else if(count($select_array)==0 && ($_POST['txt_city']!='' || $_POST['txt_zip']!='')) {
		echo '<div class="clearer">&nbsp;</div><div align="center">
				<span style="color:red;padding-top:30px;font-size: 16px;">No Waiter Found.</span>
