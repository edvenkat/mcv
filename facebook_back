<script>
$(document).ready(function() {
	$('#search').click(function () {
		var frm=document.frm_search;
		var str='';
		if($("#txt_city").val()=="" && $("#txt_zip").val()==""){
			str+="Please Enter Keyword to Search.";
		}
		if(str!='') {
			alert(str);
			return false;
		} else {
			frm.submit();
			return false;
		}
	});
});
function view_details(view_id) {
	//alert(view_id);
	$('.close1').hide();
	$('.box-details-'+view_id).show();
	
}

function close_details(view_id) {
	$('.box-details-'+view_id).hide();
}

</script>
<div class='heading'>Search Waiter</div>
<div class="bs-example">
	<form name="frm_search" id="frm_search" action="index.php" method="post">
		<div class="form-group">
			<label>City:</label>
			<input type="text" class="form-control" id="txt_city" name="txt_city" value="<?php echo ($_POST['txt_city']!='')?$_POST['txt_city']:''?>">
		</div>
		<div class="form-group">
			<label>Zip Code:</label>
			<input type="text" class="form-control"id="txt_zip" name="txt_zip" value="<?php echo ($_POST['txt_zip']!='')?$_POST['txt_zip']:''?>">
		</div>
		<div class='form-submit'>
			<button type="submit" class="btn btn-primary" id='search'>Search</button>
		</div>
	</form>
</div>
